#include <iostream> 
#include <cmath>


using namespace std;

struct base
{
int posX ; 
int posY ; 
char main_tower_symbol;
int hp;
}main_tower;
 
struct enemy1
{
int posX;
int posY;
char enemy_symbol;
int enemy_hp;
}enemy_soldier;


struct enemy2
{
int posX;
int posY;
char enemy_symbol;
int enemy_hp;
}enemy_Tank;


struct enemy3
{
int posX;
int posY;
char enemy_symbol;
int enemy_hp;
}enemy_Carry;
 
void tower_hit()// function for when the main_tower hits an enemy
{
main_tower.hp --;
}

void enemysoldierhit(){
enemy_soldier.enemy_hp --;
}
void enemyTankhit(){
enemy_Tank.enemy_hp --;
}
void enemyCarryhit(){
enemy_Carry.enemy_hp --;
}


int main()
{
const char HEIGHT = 18, WIDTH = 18; // the maze width and height 

base main_tower = {0,1,'O',10};
